{
  "include": ["src/**/*.js"],
  "exclude": ["node_modules/", "test/"],
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022", "dom"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021"
  }
}
